<!-- app/views/patients/show.html.erb -->
<h1>Patient Details</h1>

<div class="patient-info">
  <p><strong>Name:</strong> <%= @patient.name %></p>
  <p><strong>Age:</strong> <%= @patient.age %></p>
  <p><strong>Gender:</strong> <%= @patient.gender %></p>
  <p><strong>Registered on:</strong> <%= @patient.created_at.strftime('%B %d, %Y') %></p>
</div>

<div class="actions">
  <%= link_to 'Back to Patients List', patients_path %>
  
  <% if current_user.role == 'receptionist' %>
    | <%= link_to 'Edit', edit_patient_path(@patient) %> |
    <%= button_to 'Delete', 
                  patient_path(@patient), 
                  method: :delete,
                  data: { turbo_confirm: 'Are you sure you want to delete this patient?' },
                  class: 'delete-button',
                  form: { style: 'display: inline-block;' } %>
  <% end %>
</div>