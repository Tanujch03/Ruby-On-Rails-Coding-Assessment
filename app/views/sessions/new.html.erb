<!-- app/views/sessions/new.html.erb -->
<h1>Login</h1>

<%= form_with(url: sessions_path, local: true) do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>

  <%= form.submit "Log In" %>
<% end %>

<p>New user? <%= link_to "Sign up", new_user_path %></p>