<!-- app/views/patients/edit.html.erb -->
<h1>Edit Patient</h1>

<%= form_with(model: @patient, local: true) do |form| %>
  <% if @patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:</h2>
      <ul>
        <% @patient.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.label :gender %>
    <%= form.select :gender, options_for_select(['Male', 'Female', 'Other'], @patient.gender) %>
  </div>

  <div class="actions">
    <%= form.submit "Update Patient" %>
  </div>
<% end %>

<%= link_to 'Show', @patient %> |
<%= link_to 'Back to Patients List', patients_path %>